# pnpm v10+ configuration for build scripts
# The packages are whitelisted in pnpm-workspace.yaml under onlyBuiltDependencies

# Suppress the warning about ignored build scripts (they are actually allowed via onlyBuiltDependencies)
# This is safe because we explicitly list allowed packages in pnpm-workspace.yaml
strict-dep-builds=false

# Vercel deployment configuration
auto-install-peers=true
strict-peer-dependencies=false

